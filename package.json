{
  "name": "fault-tolerant-service",
  "version": "1.0.0",
  "description": "A fault-tolerant backend system for processing tasks with AWS Lambda, SQS, and DLQ",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:staging": "serverless deploy --stage staging",
    "deploy:prod": "serverless deploy --stage prod",
    "remove": "serverless remove",
    "remove:dev": "serverless remove --stage dev",
    "remove:staging": "serverless remove --stage staging",
    "remove:prod": "serverless remove --stage prod",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "lint:format": "npm run format && npm run lint",
    "local": "serverless offline",
    "dev": "nodemon --exec \"serverless offline\" --ext ts,js,json --ignore dist/",
    "logs": "serverless logs -f",
    "logs:dev": "serverless logs -f --stage dev",
    "logs:staging": "serverless logs -f --stage staging",
    "logs:prod": "serverless logs -f --stage prod",
    "invoke": "serverless invoke -f",
    "test": "node scripts/test-system.cjs",
    "test:verbose": "node scripts/test-system.cjs --verbose",
    "test:load": "node scripts/test-system.cjs --count=50",
    "test:quick": "node scripts/test-system.cjs --count=5 --timeout=30000",
    "test:unit": "jest tests/unit --coverage --passWithNoTests",
    "test:integration": "jest tests/integration --passWithNoTests",
    "test:e2e": "node tests/e2e/run-all-tests.cjs",
    "test:smoke": "node tests/e2e/comprehensive-aws-flow-test.cjs",
    "test:health": "node tests/e2e/comprehensive-aws-flow-test.cjs --health-check",
    "test:coverage": "jest --coverage --collectCoverageFrom='src/**/*.ts' --coverageReporters=text-lcov",
    "test:watch": "jest --watch",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:fix": "pnpm audit --fix",
    "validate": "npm run lint && npm run format:check && npm run build && npm run test:unit",
    "package": "serverless package",
    "package:dev": "serverless package --stage dev",
    "package:staging": "serverless package --stage staging",
    "package:prod": "serverless package --stage prod",
    "info": "serverless info",
    "info:dev": "serverless info --stage dev",
    "info:staging": "serverless info --stage staging",
    "info:prod": "serverless info --stage prod",
    "clean": "rm -rf dist .serverless coverage node_modules/.cache",
    "precommit": "npm run validate",
    "prepare": "npm run build"
  },
  "keywords": [
    "aws",
    "lambda",
    "sqs",
    "serverless",
    "fault-tolerant",
    "event-driven",
    "typescript"
  ],
  "author": "Senior Backend Developer",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@types/aws-lambda": "^8.10.131",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.50.0",
    "serverless-offline": "^13.3.0",
    "serverless-offline-sqs": "^8.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.35.0"
  },
  "dependencies": {
    "@aws-lambda-powertools/idempotency": "^2.23.0",
    "@aws-lambda-powertools/logger": "^2.0.0",
    "@aws-lambda-powertools/metrics": "^2.0.0",
    "@aws-lambda-powertools/tracer": "^2.0.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.490.0",
    "@aws-sdk/client-dynamodb": "^3.490.0",
    "@aws-sdk/client-sqs": "^3.490.0",
    "@aws-sdk/lib-dynamodb": "^3.490.0",
    "@aws-sdk/util-dynamodb": "^3.840.0",
    "@middy/core": "^4.7.0",
    "@middy/http-cors": "^4.7.0",
    "@middy/http-error-handler": "^4.7.0",
    "@middy/http-json-body-parser": "^4.7.0",
    "aws-lambda": "^1.0.7",
    "uuid": "^11.1.0",
    "zod": "~3.25.67"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
